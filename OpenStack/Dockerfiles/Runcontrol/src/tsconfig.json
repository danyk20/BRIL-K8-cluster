{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": "",
      "paths": {
        "@app/*": [
          "app/*"
        ]
      },
      "declaration": false,
      "experimentalDecorators": true,
      "lib": [
        "es6",
        "dom"
      ],
      "mapRoot": "./",
      "module": "es2020",
      "moduleResolution": "node",
      "outDir": "../dist/out-tsc",
      "sourceMap": true,
      "target": "ES2022",
      "typeRoots": [
        "../node_modules/@types"
      ],
      "useDefineForClassFields": false
    },
    "exclude": [
    "./**/*.spec.ts",
    "./test.ts",
    "./environments/environment.prod.ts"
  ]
}
